{
    "name": "authlib",
    "version": "1.0.0",
    "description": "An easy authentication library for Node.js.",
    "main": "dist/index.js",
    "repository": "https://github.com/opendocs-editor/node-auth",
    "author": "Jacob Sapoznikow <jacob1coder@gmail.com>",
    "license": "MIT",
    "type": "commonjs",
    "private": false,
    "keywords": [
        "authentication",
        "auth",
        "client",
        "server",
        "api"
    ],
    "devDependencies": {
        "@node-minify/core": "^6.2.0",
        "@node-minify/google-closure-compiler": "^6.2.0",
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.8",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.7.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "axios": "^0.24.0",
        "crypto": "^1.0.1",
        "express": "^4.17.2",
        "fs": "^0.0.1-security",
        "google-auth-library": "^7.11.0",
        "googleapis": "^92.0.0",
        "mongoose": "^6.1.6",
        "path": "^0.12.7",
        "query-string": "^7.1.0",
        "tar": "^6.1.11",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "start": "ts-node index.ts",
        "build": "yarn format && yarn fix && yarn clean && tsc -p . && node scripts/minify.js",
        "dev": "nodemon index.ts",
        "format": "prettier --write .",
        "fcheck": "prettier --check .",
        "clean": "rimraf dist min",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "start:prod": "yarn build && node dist/index.js",
        "prepublish": "yarn format && yarn fix && yarn clean && tsc -p . && node scripts/minify-prepublish.js",
        "postpublish": "node scripts/minify.js"
    },
    "files": [
        "dist/**/*.*",
        "min/**/*.*",
        "package.json",
        "src/**/*.*",
        "test/**/*.*",
        "scripts/**/*.*",
        ".eslintignore",
        ".eslintrc",
        ".gitignore",
        ".npmignore",
        ".prettierignore",
        ".prettierrc.js",
        "package.json",
        "README.md",
        "tsconfig.json",
        "yarn.lock"
    ]
}
